<h1>Edit User</h1>

<%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |f| %>
  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.select :role, User::ROLES.map { |r| [r.titleize, r] } %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth %>
    <%= f.date_select :date_of_birth %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>

<%= link_to "Back to Users", admin_users_path %>
